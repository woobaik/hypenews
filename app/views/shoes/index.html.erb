<p id="notice"><%= notice %></p>


<nav class="breadcrumb is-centered" aria-label="breadcrumbs">
  <ul>
    <li class="is-active"><a href="#">UPCOMING</a></li>
    <li class=""><a href="#" aria-current="page">PAST RELEASE</a></li>
  </ul>
</nav>

<div class="box">
  <div class="columns is-multiline">
    <% @shoes.each do |shoe|  %>
        <div class="column is-one-quarter">
        <a href=<%= shoe_path(shoe) %>>
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
              <%= shoe_images(shoe) %>
              </figure>
            </div>
          </div>
          <div class="content">
            <%= shoe.product %><br>
            <% if shoe.price  == 0.0 %>
              <%= 'PRICE Will Update Soon' %><br>
            <% else %>
              <%= number_to_currency(shoe.price) %><br>
            <% end %>  

            <% if shoe.release_date %>
              <%= shoe.release_date.localtime.strftime('Release on %m/%d/%y') %><br>
              <%= shoe.release_date.localtime.strftime('At %I:%M%p') %>
            <% end %>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>




<%= link_to 'New Shoe', new_shoe_path %>


<div class="container">
  <%= form_with(model: shoe, local: true) do |form| %>
    <% if shoe.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

        <ul>
        <% shoe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= form.label :product, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :product, class:"input", placeholder:"Enter Product Name"%>
        <span class="icon is-left">
          <i class="fas fa-tshirt"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <%= form.label :price, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :price, class:"input", placeholder:"Enter PRICE" %>
        <span class="icon is-left">
         <i class="far fa-money-bill-alt"></i>
        </span>
      </div>  
    </div>

    <div class="field">
      <%= form.label :release_date, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :release_date, class: "input datepicker", placeholder:"Enter RELEASE DATE" %>  
        <span class="icon is-left">
          <i class="far fa-calendar-alt"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <%= form.label :style_code, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :style_code, class:"input", placeholder:"Enter STYLECODE"%>
        <span class="icon is-left">
          <i class="fas fa-barcode"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <%= form.label :color, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :color, class:"input", placeholder:"Enter COLOR"%>
        <span class="icon is-left">
          <i class="fas fa-palette"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <%= form.label :retailer, class:"label" %>
      <div class="control has-icons-left">
        <%= form.text_field :retailer, class:"input", placeholder:"Enter RETAILER"%>
        <span class="icon is-left">
          <i class="fas fa-store"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <div class="file has-name is-boxed">
        <label class="file-label">
           <%= form.file_field :shoe_images, class:"file-input" %>
           <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
            Choose a file...
            </span>
           </span>
           <span class="file-name"> 
           </span>
        </label>
      </div>
    </div>

    <div class="actions">
      <button type="submit" class="button is-primary is-large is-fullwidth">
      submit
      </button>
    </div>
  <% end %>
</div>
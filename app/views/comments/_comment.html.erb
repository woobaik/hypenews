<article class="media reply-box">
  <figure class="media-left">
    <p class="image is-64x64">
      <img class="is-rounded"src="https://bulma.io/images/placeholders/128x128.png">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong><%= comment.user.username%></strong> <small>@<%= comment.user.email_id%></small> <small><%= time_ago_in_words(comment.created_at) %> ago</small>
        <br>
        <%= comment.body %>
      </p>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-reply"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-retweet"></i></span>
        </a>
        <a class="level-item">
          <span class="icon is-small"><i class="fas fa-heart"></i></span>
        </a>
      </div>
    </nav>
  </div>
  
  <% if current_user == comment.user %>
    <div class="media-right">      
        <%= link_to 'text', shoe_comment_path(comment.shoe,comment), method: :delete, class: "delete reply-delete" %>
    </div>  
  <% end %>
  
</article>
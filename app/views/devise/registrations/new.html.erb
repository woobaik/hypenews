<div class="container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


     <div class="field">
      <%= f.label :username, class:"label" %>  
      <div class="control has-icons-left">
        <%= f.text_field :username, autofocus: true, class:"input", placeholder:"Username", autocomplete: 'username'%>
        <span class="icon is-left">
          <i class="fas fa-user"></i>
        </span>
      </div>
    </div>

    
     <div class="field">
      <%= f.label :email, class:"label" %>  
      <div class="control has-icons-left">
        <%= f.email_field :email, class:"input", placeholder:"User Email", autocomplete: 'email'%>
        <span class="icon is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>

      <div class="field">
        <%= f.label :password, class:"label" %>  
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />        
        <div class="control has-icons-left">
          <%= f.password_field :password, class:"input", placeholder:"Password", autocomplete: 'new-password'%>
          <span class="icon is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>
      
      <div class="field">
        <%= f.label :password_confirmation, class:"label" %>  
        <div class="control has-icons-left">
          <%= f.password_field :password_confirmation, class:"input", placeholder:"Password Confirmation", autocomplete: 'new-password'%>
          <span class="icon is-left">
            <i class="fas fa-key"></i>
          </span>
        </div>
      </div>


    <div class="actions">
      <button type="submit" class="button is-primary is-large is-fullwidth">
      Create Account
      </button>
    </div>

<% end %>

<%= render "devise/shared/links" %>
</div>